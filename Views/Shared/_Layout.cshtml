<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Theatre Booking System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheatreBookingSystem_MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-brand-container">
                    <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="path/to/your/logo.png" alt="Logo" class="logo" />
                        Theatre Booking System
                    </a>
                </div>
                <div class="navbar-nav-container">
                    <div class="navbar-nav mx-auto flex">
                        <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link " asp-area="" asp-controller="Event" asp-action="Index">Events</a>
                        <a class="nav-link " asp-area="" asp-controller="Reservation" asp-action="Index">Reservations</a>
                        <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        <a class="nav-link " asp-area="" asp-controller="Profile" asp-action="Index">Profile</a>
                    </div>
                </div>
                <div class="navbar-login-container">
                    <!-- Login button -->
                    @if (User.Identity.IsAuthenticated)
                    {
                            <a class="nav-link " asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            <form method="post" asp-area="" asp-controller="Account" asp-action="Logout">
                                <button class="btn btn-outline-danger">Logout</button>
                            </form>
                    }
                    else
                    {
                            <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TheatreBookingSystem_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>