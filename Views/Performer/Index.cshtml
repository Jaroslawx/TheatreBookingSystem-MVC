﻿@using TheatreBookingSystem_MVC.ViewModels
@model IEnumerable<PerformerViewModel>

<h1>Performers</h1>

<table class="table">
    <thead>
        <tr>
            <th>Role</th>
            <th>Event</th>
            <th>Actor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var performer in Model)
        {
            <tr>
                <td>@performer.Role</td>
                <td>@performer.EventName</td>
                <td>@($"{performer.ParticipantName} {performer.ParticipantSurname}")</td>
            </tr>
        }
    </tbody>
</table>