﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

@model TheatreBookingSystem_MVC.ViewModels.DashboardViewModel

<h1 class="display-4 fw-normal">Dashboard</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Event" asp-action="Create">Create Event</a>
@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a>
}
<div class="album py-5 bg-light">
    <div class="container">
        <h2 class="display-4 fw-normal">Your events</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Events)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="img-fluid" src="Model.events[j].Src" alt="Model.events[j].Name banner" style="max-width: 500px; max-height: 300px;">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.EventType</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>