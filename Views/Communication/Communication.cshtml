@{
	ViewData["Title"] = "Communication Hub";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="text-center">
                <h1 class="mb-4">Welcome to the Communication Hub!</h1>
                <p class="lead">At Theatre Booking System, effective communication is at the heart of everything we do. This platform serves as a central hub for all communication-related activities. Whether you're looking to connect with team members, stay informed about upcoming events, or engage in discussions, you're in the right place.</p>
                <p class="lead">Explore the features and resources available in this section to enhance your communication experience. Feel free to reach out to our support team if you have any questions or suggestions.</p>
                <p class="lead">Thank you for being a part of our vibrant community!</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h2>Contact Us</h2>
    <form method="post" asp-action="SendMessage">
        <div class="form-group">
            <label for="userName">Your Name</label>
            <input type="text" class="form-control" id="userName" name="userName" placeholder="Your Name" required />
        </div>
        <div class="form-group">
            <label for="userMessage">Your Message</label>
            <textarea class="form-control" id="userMessage" name="userMessage" placeholder="Type your message" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>