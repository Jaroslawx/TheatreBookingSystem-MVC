@model TheatreBookingSystem_MVC.ViewModels.TicketViewModel



<div class="container">
    <h1 class="my-4">Return Ticket for @Model.EventName</h1>

    @using (Html.BeginForm("Return", "Ticket", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.EventId)

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedRow, "Row")
            @Html.TextBoxFor(model => model.SelectedRow, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedSeat, "Seat")
            @Html.TextBoxFor(model => model.SelectedSeat, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PurchaserEmail, "Email")
            @Html.TextBoxFor(model => model.PurchaserEmail, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PurchaserName, "Name")
            @Html.TextBoxFor(model => model.PurchaserName, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var errorMessage = '@TempData["Error"]';
            if (errorMessage) {
                alert(errorMessage);
            }
        });
    </script>
}




