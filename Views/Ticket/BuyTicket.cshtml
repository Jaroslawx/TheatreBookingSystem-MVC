@model TheatreBookingSystem_MVC.ViewModels.TicketViewModel

<h2>Buy Ticket</h2>

<p>Event: @Model.EventName</p>
<p>Selected Ticket Type: @Model.SelectedTicketType</p>
<p>Selected Row: @Model.SelectedRow</p>
<p>Selected Seat: @Model.SelectedSeat</p>
<p>Purchaser Name: @Model.PurchaserName</p>
<p>Purchaser Email: @Model.PurchaserEmail</p>

<form asp-controller="Ticket" asp-action="BuyTicket" method="post">
    <div>
        <label for="PurchaserName">Purchaser Name:</label>
        <input type="text" id="PurchaserName" name="PurchaserName" />
    </div>
    <div>
        <label for="PurchaserEmail">Purchaser Email:</label>
        <input type="text" id="PurchaserEmail" name="PurchaserEmail" />
    </div>

    <input type="submit" value="Purchase Ticket" />
</form>
