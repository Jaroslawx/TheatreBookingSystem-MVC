@{
}

@{
    ViewData["Title"] = "Ticket Confirmation";
}

<div class="container">
    <h1 class="my-4">Ticket Purchase Confirmation</h1>

    <div class="alert alert-success" role="alert">
        Congratulations! Your ticket purchase was successful.
    </div>

    <p>
        Thank you for choosing our service. Below are the details of your ticket purchase:
    </p>

    <ul>
        <li><strong>Ticket Type:</strong> @Model.SelectedTicketType</li>
        <li><strong>Row:</strong> @Model.SelectedRow</li>
        <li><strong>Seat:</strong> @Model.SelectedSeat</li>
        <li><strong>Purchaser Email:</strong> @Model.PurchaserEmail</li>
        <li><strong>Purchaser Name:</strong> @Model.PurchaserName</li>
    </ul>

    <p>
        If you have any questions or concerns, please contact our support team.
    </p>
</div>