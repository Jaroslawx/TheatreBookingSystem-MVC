@model TheatreBookingSystem_MVC.Models.Ticket

<h2>Purchase Ticket</h2>

@if (Model != null)
{
<form asp-action="Purchase" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Row">Row:</label>
        <input asp-for="Row" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Seat">Seat:</label>
        <input asp-for="Seat" class="form-control" required />
    </div>

    <!-- Add other ticket-related fields as needed -->

    <button type="submit" class="btn btn-primary">Purchase</button>
</form>
}
else
{
<p>Invalid ticket information.</p>
}
