@model TheatreBookingSystem_MVC.ViewModels.ReturnTicketViewModel

<h2>Return Ticket</h2>

<p>Event: @Model.EventName</p>
<p>Purchaser Name: @Model.PurchaserName</p>

<form asp-controller="Ticket" asp-action="Return" method="post">
    <div>
        <label for="ReturnReason">Return Reason:</label>
        <input type="text" id="ReturnReason" name="ReturnReason" />
    </div>

    <input type="hidden" id="TicketId" name="TicketId" value="@Model.TicketId" />

    <input type="submit" value="Return Ticket" />
</form>
