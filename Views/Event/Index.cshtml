*@
@{
}

<h1>Hello Events</h1>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <div class="col">
                @foreach(var item in Model)
				{
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="/img/photo.jpg" alt="Image" />
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id" 
                                                class="btn btn-sm btn-outline-secondary">Details</a>
                                    <a type="btn btn-success" asp-controller="Ticket" asp-action="Index" asp-route-id="@item.Id"
                                                class="btn btn-sm btn-outline-secondary">Buy Ticket</a>
                                    <a type="btn btn-success" asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id"
                                                class="btn btn-sm btn-outline-secondary">Edit</a>
                                </div>
                                <small class="text-body-secondary">@item.EventType</small>
                            </div>
                        </div>
                    </div>
				}
            </div>
        </div>
    </div>
</div>